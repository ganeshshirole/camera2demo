<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/camera2_video_fragment">

    <fragment
        android:id="@+id/camera2_video_fragment"
        android:name="com.example.android.camera2.video.java_fragments.Camera2VideoFragment"
        android:label="Video" >

    </fragment>

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.example.android.camera2.video.fragments.PermissionsFragment"
        android:label="Permissions" >

        <action
            android:id="@+id/action_permissions_to_selector"
            app:destination="@id/selector_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/selector_fragment"
        android:name="com.example.android.camera2.video.fragments.SelectorFragment"
        android:label="Selector" >

        <action
            android:id="@+id/action_selector_fragment_to_preview_fragment"
            app:destination="@id/preview_fragment" />

    </fragment>

    <fragment
        android:id="@+id/preview_fragment"
        android:name="com.example.android.camera2.video.fragments.PreviewFragment"
        android:label="Preview" >

        <argument
            android:name="camera_id"
            app:argType="string"
            app:nullable="false"/>

        <argument
            android:name="width"
            app:argType="integer" />

        <argument
            android:name="height"
            app:argType="integer" />

        <argument
            android:name="fps"
            app:argType="integer" />

        <argument
            android:name="dynamicRange"
            app:argType="long" />

        <argument
            android:name="colorSpace"
            app:argType="integer" />

        <argument
            android:name="previewStabilization"
            app:argType="boolean" />

        <argument
            android:name="useMediaRecorder"
            app:argType="boolean" />

        <argument
            android:name="videoCodec"
            app:argType="integer" />

        <argument
            android:name="filterOn"
            app:argType="boolean" />

        <argument
            android:name="useHardware"
            app:argType="boolean" />

        <argument
            android:name="transfer"
            app:argType="integer" />

        <action
            android:id="@+id/action_preview_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/preview_fragment"
            app:popUpToInclusive="true"/>

    </fragment>

</navigation>